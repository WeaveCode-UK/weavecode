# ========================================
# WEAVECODE BACKEND - VARIÁVEIS DE AMBIENTE
# ========================================

# SERVIDOR
PORT=4000
NODE_ENV=development

# BANCO DE DADOS
DATABASE_URL="postgresql://postgres:password@localhost:5432/weavecode?schema=public"

# AUTENTICAÇÃO
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# STRIPE (PAGAMENTOS)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PAYPAL (PAGAMENTOS)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# SENDGRID (EMAIL)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@weavecode.co.uk

# CHATWOOT (SUPORTE)
CHATWOOT_ACCOUNT_ID=your_chatwoot_account_id_here
CHATWOOT_ACCESS_TOKEN=your_chatwoot_access_token_here

# SEGURANÇA
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# INSTRUÇÕES:
# 1. Copie este arquivo para .env
# 2. Preencha com suas chaves reais
# 3. NUNCA commite o arquivo .env no Git
# ========================================
