{
  "name": "backend",
  "version": "1.0.0",
  "description": "WeaveCode backend (Express/Postgres/PG/JWT/Payments)",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "db:test": "node -e \"import('./src/lib/postgres.js').then(pg => pg.testConnection())\"",
    "db:create-tables": "node -e \"import('./src/lib/models.js').then(models => models.createTables())\"",
    "db:check-tables": "node -e \"import('./src/lib/models.js').then(models => models.checkTables())\""
  },
  "keywords": [],
  "author": "WeaveCode",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "paypal-rest-sdk": "^1.8.1",
    "pg": "^8.16.3",
    "stripe": "^18.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
